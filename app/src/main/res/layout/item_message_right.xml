<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/messageContainerHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/vk_light_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
      android:id="@+id/ll_msg_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="2dp"
      android:layout_marginTop="2dp"
      android:gravity="end"
      android:orientation="vertical"
      android:paddingBottom="5dp"
      android:paddingEnd="5dp"
      android:paddingTop="5dp"
      tools:ignore="RtlSymmetry">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/message_bg_text_out"
          tools:ignore="ContentDescription" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical"
          android:paddingBottom="4dp"
          android:paddingEnd="16dp"
          android:paddingStart="8dp"
          android:paddingTop="4dp"
          >

        <TextView
            android:id="@+id/tv_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            tools:text="@string/some_msg"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="horizontal"
            android:paddingTop="2dp">

          <TextView
              android:id="@+id/tv_msg_date"
              style="@style/Base.TextAppearance.AppCompat.Caption"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/vk_grey_color"
              android:textSize="12sp"
              tools:text="25/05/2016"
              />

        </LinearLayout>

      </LinearLayout>
</FrameLayout>
  </LinearLayout>


</FrameLayout>